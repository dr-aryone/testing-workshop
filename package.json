{
  "name": "testing-workshop",
  "version": "0.1.0",
  "license": "MIT",
  "dependencies": {
    "normalize.css": "^8.0.1",
    "prop-types": "^15.7.2",
    "react": "^16.8.6",
    "react-dom": "^16.8.6",
    "react-router-dom": "^5.0.1",
    "react-scripts": "3.0.1",
    "styled-components": "^4.3.1"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "test-push": "cross-env CI=true react-scripts test --env=jsdom",
    "eject": "react-scripts eject",
    "present": "mdx-deck presentation/index.mdx",
    "present-build": "mdx-deck build presentation/index.mdx"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.{js,jsx}",
      "!src/index.js"
    ]
  },
  "husky": {
    "hooks": {
      "pre-push": "yarn test-push"
    }
  },
  "devDependencies": {
    "@testing-library/react": "^8.0.1",
    "cross-env": "^5.2.0",
    "husky": "^2.4.1",
    "jest-dom": "^3.5.0",
    "mdx-deck": "^2.3.2"
  }
}
